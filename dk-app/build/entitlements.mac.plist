<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- Required for Electron apps -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Sandbox escape permissions -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- User selected file access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Home directory access permissions -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>
    
    <!-- Network access -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Access to user's home directory for config file -->
    <key>com.apple.security.files.home-relative-path.read-write</key>
    <array>
      <string>/.syftbox/</string>
    </array>
  </dict>
</plist>